{% extends 'SonataAdminBundle:CRUD:base_show.html.twig' %}

{% block sonata_admin_content %}
    <div class="sonata-ba-show">
        <div class="sonata-ba-view row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">{{ 'backend.admin.contact.user_question' | trans }}</h4>
                    </div>
                    <div class="box-body table-responsive no-padding">
                        <table class="table">
                            <tbody>
                            <tr class="sonata-ba-view-container">
                                <th>{{ 'backend.admin.date' | trans }}</th>
                                <td>{{ object.createdAt | date('d/m/Y H:i') }}</td>
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <th>{{ 'backend.admin.contact.name' | trans }}</th>
                                <td>{{ object.name }}</td>
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <th>{{ 'backend.admin.contact.email' | trans }}</th>
                                <td>{{ object.email }}</td>
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <th>{{ 'backend.admin.contact.subject' | trans }}</th>
                                <td>{{ object.subject }}</td>
                            </tr>
                            <tr class="sonata-ba-view-container">
                                <th>{{ 'backend.admin.contact.message' | trans }}</th>
                                <td>{{ object.message | raw }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">{{ 'backend.admin.contact.your_answer' | trans }}</h4>
                    </div>
                    <div class="box-body">
                        {{ form(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
