{% extends "::Admin/edit.html.twig" %}

{# override actions bottom bar #}
{% block sonata_form_actions %}
    {{ parent() }}
    {# special update button section #}
    {% if object.next is not null %}
        <div class="btn-group" role="group">
            <a class="btn btn-info" href="{{ admin.generateObjectUrl('batchedit', object) }}" title="{{ 'backend.admin.event.button.special_timelapse_update_helper' | trans({}, 'messages') }}"><i class="fa fa-clock-o" aria-hidden="true"></i> {{ 'backend.admin.event.button.special_timelapse_update' | trans({}, 'messages') }}</a>
        </div>
    {% endif %}
    {# timelapse buttons section #}
    {% include ":Admin/Event:timelapse_buttons_section.html.twig" %}
{% endblock %}
