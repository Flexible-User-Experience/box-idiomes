{% extends ":Admin:layout.html.twig" %}

{% block sonata_admin_content %}
    {{ form_start(form) }}
        <div class="sonata-ba-show">
            <div class="sonata-ba-view row">
                <div class="col-md-4">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h4 class="box-title">{{ 'backend.admin.invoice.generate' | trans }}</h4>
                        </div>
                        <div class="box-body">
                            {{ form_row(form.year) }}
                            {{ form_row(form.month) }}
                            {{ form_row(form.preview) }}
                        </div>
                    </div>
                </div>
                {% if students|length > 0 %}
                    <div class="col-md-8">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h4 class="box-title">{{ 'backend.admin.invoice.list' | trans }}</h4>
                            </div>
                            <div class="box-body">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <td>{{ 'backend.admin.student.name' | trans }}</td>
                                            <td class="text-right">{{ 'backend.admin.student.tariff' | trans }}</td>
                                            <td class="text-right">{{ 'backend.admin.student.discountApplied' | trans }}</td>
                                            <td class="text-right">{{ 'backend.admin.student.total' | trans }}</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for student in students  %}
                                        <tr>
                                            <td>{{ student.fullCanonicalName }}</td>
                                            <td class="text-right">{{ student.tariff.price | number_format(2, ',', '.') }} €</td>
                                            <td class="text-right">
                                                {% if student.calculateMonthlyDiscount > 0 %}
                                                    - {{ student.calculateMonthlyDiscount | number_format(2, ',', '.') }} €
                                                {% endif %}
                                            </td>
                                            <td class="text-right">{{ student.calculateMonthlyTariff | number_format(2, ',', '.') }} €</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <hr>
                                {{ form_row(form.generate) }}
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
