{% extends ":Admin:layout.html.twig" %}

{% block sonata_admin_content %}
    <div class="sonata-ba-show">
        <div class="sonata-ba-view row">
            <div class="col-md-4">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">{{ 'backend.admin.invoice.generate' | trans }}</h4>
                    </div>
                    <div class="box-body">
                        {{ form(form) }}
                    </div>
                </div>
            </div>
            {% if invoices|length > 0 %}
                <div class="col-md-6">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h4 class="box-title">{{ 'backend.admin.invoice.list' | trans }}</h4>
                        </div>
                        <div class="box-body">
                            <table class="table">
                                <thead>
                                <tr>
                                    <td>Noms</td>
                                    <td>Iport factura</td>
                                    <td>Control</td>
                                </tr>
                                </thead>
                                <tbody>
                                {% for invoice in invoices  %}
                                    <tr>
                                        <td>{{ invoice.student.fullCanonicalName }}</td>
                                        <td>{{ invoice.totalAmount }}</td>
                                        <td>{{ invoice.enabled }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <button type="submit" class="btn btn-success">Generar lot</button>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
