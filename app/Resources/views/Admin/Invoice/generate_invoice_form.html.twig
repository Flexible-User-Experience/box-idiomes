{% extends ":Admin:layout.html.twig" %}

{% block sonata_admin_content %}
    <div class="sonata-ba-show">
        <div class="sonata-ba-view row">
            <div class="col-md-4">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">{{ 'backend.admin.invoice.generate' | trans }}</h4>
                    </div>
                    <div class="box-body">
                        {{ form(form) }}
                    </div>
                </div>
            </div>
            {% if students|length > 0 %}
                <div class="col-md-4">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h4 class="box-title">{{ 'backend.admin.invoice.list' | trans }}</h4>
                        </div>
                        <div class="box-body">
                            <table class="table">
                                <thead>
                                <tr>
                                    <td>Nom</td>
                                    <td>Cognoms</td>
                                </tr>
                                </thead>
                                <tbody>
                                {% for student in students  %}
                                    <tr>
                                        <td>{{ student.name }}</td>
                                        <td>{{ student.surname }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
