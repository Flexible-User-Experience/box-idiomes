{% extends ":Admin:layout.html.twig" %}

{% block sonata_admin_content %}
    <div class="sonata-ba-show">
        <div class="sonata-ba-view row">
            <div class="col-md-3">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h4 class="box-title">{{ 'backend.admin.invoice.generate' | trans }}</h4>
                    </div>
                    <div class="box-body">
                        {{ form(year_month_form) }}
                    </div>
                </div>
            </div>
            {% if students | length > 0 %}
                {% set carriedTotalAmount = 0 %}
                {{ form_start(form) }}
                    <div class="col-md-9">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h4 class="box-title">{{ 'backend.admin.invoice.list' | trans }}</h4>
                            </div>
                            <div class="box-body">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>{{ 'backend.admin.invoiceLine.isReadyToGenerate' | trans }}</th>
                                            <th>{{ 'backend.admin.student.student' | trans }}</th>
                                            <th>{{ 'backend.admin.invoiceLine.units' | trans }}</th>
                                            <th>{{ 'backend.admin.invoiceLine.priceUnit' | trans }}</th>
                                            <th>{{ 'backend.admin.student.discountApplied' | trans }}</th>
                                            <th class="text-right">{{ 'backend.admin.student.total' | trans }}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for item in form.items  %}
                                        <tr>
                                            <td>{{ form_widget(item.isReadyToGenerate) }}</td>
                                            <td>{{ students[loop.index0].fullCanonicalName }}</td>
                                            <td>{{ form_widget(item.units) }}</td>
                                            <td>{{ form_widget(item.unitPrice) }}</td>
                                            <td>{{ form_widget(item.discount) }}</td>
                                            <td class="text-right">{{ students[loop.index0].calculateMonthlyTariff | draw_money | raw }}</td>
                                            {% set carriedTotalAmount = carriedTotalAmount + students[loop.index0].calculateMonthlyTariff %}
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <th colspan="5" class="text-right">{{ 'backend.admin.student.total' | trans | upper }}</th>
                                        <th class="text-right">{{ carriedTotalAmount | draw_money | raw }}</th>
                                    </tr>
                                    </tfoot>
                                </table>
                                {{ form_row(form.generate) }}
                            </div>
                        </div>
                    </div>
                    <div class="hidden">
                        {{ form_rest(form) }}
                    </div>
                {{ form_end(form) }}
            {% endif %}
            {% if students | length == 0 and form.generate is defined %}
                <div class="col-md-9">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h4 class="box-title">{{ 'backend.admin.invoice.list' | trans }}</h4>
                        </div>
                        <div class="box-body">
                            <div class="alert alert-warning"><i class="fa fa-warning"></i> {{ 'backend.admin.invoice.generator.no_records_found' | trans }}</div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
