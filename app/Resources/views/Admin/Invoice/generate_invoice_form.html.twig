{% extends ":Admin:layout.html.twig" %}

{% block sonata_admin_content %}
    {{ form_start(form) }}
        <div class="sonata-ba-show">
            <div class="sonata-ba-view row">
                <div class="col-md-4">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h4 class="box-title">{{ 'backend.admin.invoice.generate' | trans }}</h4>
                        </div>
                        <div class="box-body">
                            {{ form_row(form.year) }}
                            {{ form_row(form.month) }}
                            {{ form_row(form.preview) }}
                        </div>
                    </div>
                </div>
                {% if students | length > 0 %}
                    {% set carriedTotalAmount = 0 %}
                    <div class="col-md-8">
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h4 class="box-title">{{ 'backend.admin.invoice.list' | trans }}</h4>
                            </div>
                            <div class="box-body">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>{{ 'backend.admin.invoice.student' | trans }}</th>
                                            <th class="text-right">{{ 'backend.admin.student.tariff' | trans }}</th>
                                            <th class="text-right">{{ 'backend.admin.student.discountApplied' | trans }}</th>
                                            <th class="text-right">{{ 'backend.admin.student.total' | trans }}</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for student in students  %}
                                        <tr>
                                            <td>{{ student.fullCanonicalName }}</td>
                                            <td class="text-right">{{ student.tariff.price | draw_money | raw }}</td>
                                            <td class="text-right">
                                                {% if student.calculateMonthlyDiscount > 0 %}
                                                    {% set monthlyDiscount = student.calculateMonthlyDiscount * -1 %}
                                                    {{ monthlyDiscount | draw_money | raw }}
                                                {% endif %}
                                            </td>
                                            <td class="text-right">{{ student.calculateMonthlyTariff | draw_money | raw }}</td>
                                            {% set carriedTotalAmount = carriedTotalAmount + student.calculateMonthlyTariff %}
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                    <tfoot>
                                    <tr>
                                        <th colspan="3" class="text-right">{{ 'backend.admin.student.total' | trans | upper }}</th>
                                        <th class="text-right">{{ carriedTotalAmount | draw_money | raw }}</th>
                                    </tr>
                                    </tfoot>
                                </table>
                                {{ form_row(form.generate) }}
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        {% if hide_generate_button and form.generate is defined %}
            <div class="hidden">
                {{ form_row(form.generate) }}
            </div>
        {% endif %}
        {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
