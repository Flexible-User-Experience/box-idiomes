                                <td>
                                    {# Header #}
                                    <table class="row">
                                        <tbody>
                                        <tr>
                                            <th class="vertical-padding">
                                                <a href="{{ url('app_homepage') }}">
                                                    <img style="margin-top:40px;margin-bottom:50px" class="text-center" alt="logo" src="{{ get_absolute_asset_path_context_independent('bundles/app/img/email-logo.png') }}" width="300" height="150">
