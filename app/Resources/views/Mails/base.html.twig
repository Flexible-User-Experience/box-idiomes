    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta name="viewport" content="width=device-width"/>
        {% block headStyles %}
            <style type="text/css">
                {% autoescape false %}
                {{ includeStyles(zurb_ink_styles) }}
                {% block aditionalStyles %}
                {{ zurb_ink_styles.add("@AppBundle/Resources/public/css/mail.css") }}
