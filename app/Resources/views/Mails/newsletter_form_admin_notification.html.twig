{% extends ':Mails:base.html.twig' %}

{% block subject %}Notificació de newsletter{% endblock %}

{% block content %}
    <table class="row">
        <tbody>
        <tr>
            <th class="small-12 large-12 columns first last vertical-padding">
                <table>
                    <tr>
                        <th>
                            <h4 class="grey-color text-center">Persona interessada en rebre el newsletter</h4>
                            <p class="grey-color">
                                <a href="mailto:{{ contact.email }}">{{ contact.email }}</a> ha emplenat el formulari de subscripció al newsletter.
                            </p>
                        </th>
                        <th class="expander"></th>
                    </tr>
                </table>
            </th>
        </tr>
        </tbody>
    </table>
{% endblock %}
