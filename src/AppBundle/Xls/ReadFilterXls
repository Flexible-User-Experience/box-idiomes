<?php

namespace AppBundle\Xls;

use PhpOffice\PhpSpreadsheet\Reader\IReadFilter;

/**
 * Class ReadFilterXls.
 *
 * @category Xls
 */
class ReadFilterXls implements IReadFilter
{
    /**
     * @param string $column
     * @param int    $row
     * @param string $worksheetName
     *
     * @return bool
     */
    public function readCell($column, $row, $worksheetName = '')
    {
        // avoid title row
        return $row > 1;
    }
}
